a = [int(x) for x in range(2**23)]
b = int(input("Введите искомое число от 0 до 8388608: "))
k = 0
while len(a) > 0:
    middle = len(a) // 2
    k+=1
    if a[middle] == b:
        print("Потребовалось столько попыток: " + str(k))
        break
    elif a[middle] < b:
        a = a[middle+1:]
    else:
        a = a[:middle]
